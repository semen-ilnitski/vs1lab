<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location" width="40px" height="40px">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main">
        <section class="main__tagging tagging" >
            <h1>Tagging</h1>
            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="POST">

                <!-- ... your code here ... -->
                <fieldset>
                    <legend>Add a new GeoTag</legend>
                    <label for="lat_text" >Latitude:</label>
                    <input type="text" id="lat_input" placeholder=" lat"  disabled >
                    <input type="hidden" id="lat_input_hidden" placeholder=" lat" name="latitude" >
                    <label for="long_text" >Longitude:</label> 
                    <input type="text" id="long_input" placeholder=" long" disabled >
                    <input type="hidden" id="long_input_hidden" placeholder=" long" name="longitude" >
                    <label for="name_text" >Name:</label> 
                    <input type="text" id="name_input" pattern="[A-Za-z]+" placeholder=" e.g. Central Berlin" maxlength="10" name="name" required>
                    <label for="hashtag_text" >Hashtag:</label>
                    <input type="text" id="hashtag_input" pattern="#\w+" maxlength="11" placeholder=" e.g. #ber" name="hashtag" required>
                    <input type="submit" id="add_tag_button" value="Add Tag">
                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="POST">

                <!-- ... your code here ... -->
                <fieldset>
                <legend>Search</legend>
                <label for="search">Searchterm or Keyword</label>
                <input type="text" id="search_term" placeholder=" e.g. Berlin" name="searchterm"  required>
                <input type="hidden" id="lat_input_hidden2" placeholder=" lat" name="latitude" >
                <input type="hidden" id="long_input_hidden2" placeholder=" long" name="longitude" >
                <input type="submit" id="search_button" value="Search">
                </fieldset>
            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->

            <div class="discovery__wrapper">
                <div class="discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <!-- taglist -->
                    </ul>
                    <div class= "discovery__page"> 
                        <input class="discovery__page__button" type="submit" id="previous" value="◄">
                        <span id="page">Page</span>
                        <input class="discovery__page__button" type="submit" id="next" value="►">
                    </div>

                </div>

                <div class="discovery__map">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView"  />
                    <span>Result map</span>
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>

    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./javascripts/geotagging.js"></script>
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/map-manager.js"></script>
</body>
</html>